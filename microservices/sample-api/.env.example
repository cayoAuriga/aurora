# Environment variables for sample-api

# Service configuration
SERVICE_NAME=sample-api
SERVICE_PORT=8888
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database configuration
DB_HOST=localhost
DB_PORT=4000
DB_USERNAME=root
DB_PASSWORD=your_password
